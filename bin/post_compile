#!/usr/bin/env bash

if [ ! "$DISABLE_COLLECTSTATIC" ]; then
    echo '=====> Run compressor'
    python manage.py compress | grep -v /tmp/

    echo '=====> Run database migrate'
    python manage.py migrate --noinput

    echo '=====> Remove static files'
    rm -fr app/static/libs node_modules

else
    echo "+++++> Escape running collectstatic and migrate"
fi
